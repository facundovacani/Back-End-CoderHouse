<main>

    {{> nav}}

    <h2>Vista de Productos</h2>

    {{#if listaExiste}}
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>USD {{this.price}}</td>
                        <td><img src="{{this.thumbnail}}" alt="{{this.title}}"> </td>              
                    </tr>
                {{/each}}
            </tbody>        
        </table>
    {{else}}
        <h3>No hay productos</h3>
    {{/if}}
</main>